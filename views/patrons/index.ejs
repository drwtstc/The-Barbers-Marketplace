<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Poiret+One&family=Raleway+Dots&display=swap" rel="stylesheet">
  <style> @import url('https://fonts.googleapis.com/css2?family=Poiret+One&family=Raleway+Dots&display=swap'); </style>
  <title>All Patrons</title>
</head>
<body>
  <nav>
    <img src="/images/clippers.png">
    <% if (user) { %>
      <a href="/logout">LOG OUT</a>
    <% } else { %>
      <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a>
    <% } %>
  </nav>
  
  <main>
    <h1>List of Patrons</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Preferred Day</th>
                <th>Preferred Time</th>
            </tr>
        </thead>
        <tbody>
            <% patrons.forEach(function(patron) { %>
                <tr>
                    <td>
                        <%= patron.name %>
                    </td>
                    <td>
                        <%= patron.phone %>
                    </td>
                    <td>
                        <%= patron.prefDay %>
                    </td>
                    <td>
                        <%= patron.prefTime %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/">Home</a>
</main>
</body>

</html>