<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Patron Index</title>
</head>

<body>
    <h1>List of Patrons</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Preferred Day</th>
                <th>Preferred Time</th>
            </tr>
        </thead>
        <tbody>
            <% patrons.forEach(function(patron) { %>
                <tr>
                    <td>
                        <%= patron.name %>
                    </td>
                    <td>
                        <%= patron.phone %>
                    </td>
                    <td>
                        <%= patron.prefDay %>
                    </td>
                    <td>
                        <%= patron.prefTime %>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/">Home</a>
</body>

</html>